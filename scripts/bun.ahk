:*:buni::
{
    SendText "bun install"
    Send "{Enter}"
}

:*:buna::
{
    SendText "bun add "
}

:*:bunad::
{
    SendText "bun add -d "
}

:*:bund::
{
    SendText "bun dev"
    Send "{Enter}"
}

:*:buns::
{
    SendText "bun start"
    Send "{Enter}"
}

:*:bunt::
{
    SendText "bun test"
    Send "{Enter}"
}

:*:bunr::
{
    SendText "bun run "
}

:*:bunx::
{
    SendText "bunx "
}
