; ===============================
; Flutter & Dart Command Shortcuts
; ===============================

:*:flutrun::
{
    SendText "flutter run"
    Send "{Enter}"
}

:*:flutbuild::
{
    SendText "flutter build apk"
    Send "{Enter}"
}

:*:flutget::
{
    SendText "flutter pub get"
    Send "{Enter}"
}

:*:flutclean::
{
    SendText "flutter clean"
    Send "{Enter}"
}

:*:flutdoc::
{
    SendText "flutter doctor"
    Send "{Enter}"
}

:*:flutup::
{
    SendText "flutter upgrade"
    Send "{Enter}"
}

; Dart
:*:dartt::
{
    SendText "dart test"
    Send "{Enter}"
}

:*:dartr::
{
    SendText "dart run "
}
